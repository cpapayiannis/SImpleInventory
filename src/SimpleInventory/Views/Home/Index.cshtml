@{
    ViewData["Title"] = "Home";
}

<div class="container mt-4">
    <h1 class="mb-4">Simple Inventory</h1>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Products</h5>
                    <p class="card-text text-muted">
                        Browse, search, and manage your products. Supports filtering by category, sorting, paging, and full CRUD.
                    </p>
                    <div class="mt-auto">
                        <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Go to Products</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Categories</h5>
                    <p class="card-text text-muted">
                        View and create categories to organize your products. Category names must be unique.
                    </p>
                    <div class="mt-auto">
                        <a asp-controller="Categories" asp-action="Index" class="btn btn-secondary">Go to Categories</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
